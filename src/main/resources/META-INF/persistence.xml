<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

	<persistence-unit name="UARKPersistenceUnit">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<class>edu.uark.csce.pizzaParty.uarkDirectoryServer.model.App</class>
		<class>edu.uark.csce.pizzaParty.uarkDirectoryServer.model.Person</class>
		<class>edu.uark.csce.pizzaParty.uarkDirectoryServer.model.PersonAppXrf</class>
		<properties>
			<property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/UARK?useSSL=false" />
			<property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver" />
			<property name="openjpa.jdbc.Schema" value="UARK" />
			<property name="openjpa.ConnectionUserName" value="" />
			<property name="openjpa.ConnectionPassword" value="" />
			<property name="openjpa.Log" value="DefaultLevel=WARN, Runtime=INFO, Tool=INFO, SQL=TRACE" />
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
		</properties>
	</persistence-unit>
</persistence>
